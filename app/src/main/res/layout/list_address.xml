<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:weightSum="2">

    <TextView
        android:id="@+id/listAddress_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.3"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/balooda2_regular"
        android:text="Vastu Vihar, JW-2, Road No - 4 "
        android:textColor="@android:color/black"
        android:textSize="17dp" />
    />

    <TextView
        android:id="@+id/listAddress_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:background="@drawable/solid_textview"
        android:fontFamily="@font/balooda2_semibold"
        android:paddingHorizontal="10dp"
        android:text="CURRENT"
        android:textColor="@android:color/white"
        android:visibility="visible" />


</LinearLayout>